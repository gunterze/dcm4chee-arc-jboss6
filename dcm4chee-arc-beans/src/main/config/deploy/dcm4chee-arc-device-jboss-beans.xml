<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="urn:jboss:bean-deployer bean-deployer_2_0.xsd"
  xmlns="urn:jboss:bean-deployer:2.0">

  <bean name="Executer" class="java.util.concurrent.Executor">
    <constructor factoryClass="java.util.concurrent.Executors"
      factoryMethod="newCachedThreadPool" />
  </bean>

  <bean name="ScheduledExecutorService" class="java.util.concurrent.ScheduledExecutorService">
    <constructor factoryClass="java.util.concurrent.Executors"
      factoryMethod="newSingleThreadScheduledExecutor" />
  </bean>

  <!-- Attribute Filter -->
  <bean name="AttributeFilter" class="org.dcm4chee.archive.persistence.AttributeFilter">
    <constructor>
      <parameter>
        <bean name="PatientAttributeFilter" class="org.dcm4che.data.Attributes">
            <constructor factoryClass="org.dcm4che.io.SAXReader" factoryMethod="parse">
                <parameter>resource:dcm4chee-arc/patient-attribute-filter.xml</parameter>
            </constructor>
        </bean>
      </parameter>
      <parameter>
        <bean name="StudyAttributeFilter" class="org.dcm4che.data.Attributes">
            <constructor factoryClass="org.dcm4che.io.SAXReader" factoryMethod="parse">
                <parameter>resource:dcm4chee-arc/study-attribute-filter.xml</parameter>
            </constructor>
        </bean>
      </parameter>
      <parameter>
        <bean name="SeriesAttributeFilter" class="org.dcm4che.data.Attributes">
            <constructor factoryClass="org.dcm4che.io.SAXReader" factoryMethod="parse">
                <parameter>resource:dcm4chee-arc/series-attribute-filter.xml</parameter>
            </constructor>
        </bean>
      </parameter>
      <parameter>
        <bean name="InstanceAttributeFilter" class="org.dcm4che.data.Attributes">
            <constructor factoryClass="org.dcm4che.io.SAXReader" factoryMethod="parse">
                <parameter>resource:dcm4chee-arc/instance-attribute-filter.xml</parameter>
            </constructor>
        </bean>
      </parameter>
      <parameter>
        <bean name="CaseInsensitveAttributes" class="org.dcm4che.data.Attributes">
            <constructor factoryClass="org.dcm4che.io.SAXReader" factoryMethod="parse">
                <parameter>resource:dcm4chee-arc/case-insensitive-attributes.xml</parameter>
            </constructor>
        </bean>
      </parameter>
      <parameter>
        <bean name="FuzzyStr" class="org.dcm4che.soundex.ESoundex" />
      </parameter>
    </constructor>
  </bean>

  <!-- The DICOM Device -->
  <bean name="Device" class="org.dcm4che.net.Device">
    <constructor>
      <parameter>dcm4chee-arc</parameter>
    </constructor>
    <property name="executor">
      <inject bean="Executer" />
    </property>
    <property name="scheduledExecutor">
      <inject bean="ScheduledExecutorService" />
    </property>
    <incallback method="addConnection" />
    <uncallback method="removeConnection" />
    <incallback method="addApplicationEntity" />
    <uncallback method="removeApplicationEntity" />
    <install method="setProperty">
      <parameter>org.dcm4chee.archive.persistence.AttributeFilter</parameter>
      <parameter><inject bean="AttributeFilter" /></parameter>
    </install>
    <start method="activate" />
    <stop method="deactivate" />
  </bean>


  <!-- The DICOM Connection -->
  <bean name="Connection" class="org.dcm4che.net.Connection">
    <property name="port">11112</property>
  </bean>

  <!-- The DICOM Application Entity -->
  <bean name="ApplicationEntity" class="org.dcm4che.net.ApplicationEntity">
    <constructor>
      <parameter>DCM4CHEE</parameter>
    </constructor>
    <property name="associationAcceptor">true</property>
    <property name="maxOpsPerformed">0</property>
    <property name="maxOpsInvoked">0</property>
    <property name="dimseRQHandler">
      <inject bean="DicomServiceRegistry" />
    </property>
    <incallback method="addConnection" />
    <incallback method="addTransferCapability" />
  </bean>

  <!-- Service Registry -->
  <bean name="DicomServiceRegistry" class="org.dcm4che.net.service.DicomServiceRegistry">
    <incallback method="addDicomService" />
  </bean>

</deployment>
